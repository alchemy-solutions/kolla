[DEFAULT]
debug = {{ glance_logging_debug }}

bind_host = {{ hostvars[inventory_hostname]['ansible_' + api_interface]['ipv4']['address'] }}
bind_port = {{ glance_registry_port }}


use_syslog = True
syslog_log_facility = LOG_LOCAL0

[database]
connection = mysql+pymysql://{{ glance_database_user }}:{{ glance_database_password }}@{{ glance_database_address }}/{{ glance_database_name }}

[keystone_authtoken]
auth_uri = http://{{ kolla_internal_address }}:{{ keystone_public_port }}/v3
identity_uri = http://{{ kolla_internal_address }}:{{ keystone_admin_port }}
auth_version = v3
auth_type = password
project_domain_id = default
user_domain_id = default
admin_tenant_name = service
admin_user = {{ glance_keystone_user }}
admin_password = {{ glance_keystone_password }}

[paste_deploy]
flavor = keystone

[oslo_messaging_notifications]
driver = noop
